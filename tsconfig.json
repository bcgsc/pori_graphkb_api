{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": false
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ]
}
